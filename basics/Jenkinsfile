node {
   def commit_id
   stage('Preparation') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('dockerbuild') {
     echo 'dockerbuild'
   }
   stage('sonarqube tests') {
     echo 'sonarqube tests'                            
   }                                     
   stage('docker build/push') {
     echo 'sonarqube tests'
     }                                     
   }     
}                                  
                                         
